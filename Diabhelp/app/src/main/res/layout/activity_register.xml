<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.diabhelp.diabhelp.Connexion_inscription.RegisterActivity"
    android:id="@+id/root_register">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/main_layout"
        android:background="@color/background_welcome"
        tools:context="fr.diabhelp.diabhelp.Connexion_inscription.RegisterActivity"
        android:id="@+id/register">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/nom_app">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/diab_logo"
                android:id="@+id/imageView"
                android:layout_marginBottom="10dp"
                tools:ignore="ContentDescription"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/app_name"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="25sp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nom_app"
            android:id="@+id/fragment_container">


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.diabhelp.diabhelp.Connexion_inscription.RegisterActivity"
    android:id="@+id/root_register">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/background_welcome"
        tools:context="fr.diabhelp.diabhelp.ConnexionActivity"
        android:id="@+id/register">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/nom_app">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/diab_logo"
                android:id="@+id/imageView"
                android:layout_marginBottom="10dp"
                tools:ignore="ContentDescription"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="25sp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/nom_app">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="10dp"
                android:text="@string/title_register"
                android:id="@+id/title_register"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_input"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:id="@+id/email_label"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/email_input"
                android:paddingLeft="10dp"
                android:background="#ffffff"
                android:singleLine="true"
                android:id="@+id/email_input"
                tools:ignore="RtlSymmetry"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_input"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:id="@+id/login_label"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/login_input"
                android:paddingLeft="10dp"
                android:background="#ffffff"
                android:singleLine="true"
                android:id="@+id/login_input"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pwd_input"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:id="@+id/pwd_label"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/pwd_input"
                android:paddingLeft="10dp"
                android:background="#ffffff"
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/pwd_input"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="enregistrer"
                android:textAllCaps="true"
                android:onClick="onRegisterClick"
                android:id="@+id/SignUpButton"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

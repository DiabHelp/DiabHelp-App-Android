<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_welcome"
    tools:context="fr.diabhelp.diabhelp.ConnexionActivity"
    android:id="@+id/root_co">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/nom_app">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/diab_logo"
            android:id="@+id/imageView"
            android:layout_marginBottom="10dp"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Diabhelp"
            android:textColor="@color/text_color"
            android:textSize="25sp"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/nom_app">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_input"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:layout_below="@id/app_name"
            android:id="@+id/login_label"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/login_input"
            android:paddingLeft="10dp"
            android:background="#ffffff"
            android:layout_below="@id/login_label"
            android:singleLine="true"
            android:id="@+id/login_input"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pwd_input"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_below="@id/login_input"
            android:id="@+id/pwd_label"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/pwd_input"
            android:paddingLeft="10dp"
            android:background="#ffffff"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_below="@id/pwd_label"
            android:id="@+id/pwd_input"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="se connecter"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:onClick="connect"
            android:layout_below="@id/pwd_input"
            android:id="@+id/connexionButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/connexionButton"
            android:gravity="center"
            android:text="ou"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:id="@+id/ou"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="s'inscrire"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:onClick="signUp"
            android:layout_below="@id/ou"
            android:id="@+id/SignUpButton"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</RelativeLayout>



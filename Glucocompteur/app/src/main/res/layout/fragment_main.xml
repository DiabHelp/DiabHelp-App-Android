<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addFood"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/food_add"
            android:layout_width="56dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cleanMenu"
            android:layout_width="56dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_height="56dp" />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main.appbar"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"
            android:weightSum="1">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="276dp"
            android:layout_marginTop="10dp"
            android:layout_height="102dp"
            app:cardCornerRadius="4dp">


                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/main.collapsing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleMarginStart="48dp"
                    app:expandedTitleMarginEnd="64dp"
                    >

                    <TextView
                        android:id="@+id/totalGlucids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GlycÃ©mie totale :"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_below="@+id/totalWeight"
                        android:gravity="bottom|center"
                        android:layout_gravity="bottom|left|center"
                        android:layout_marginBottom="50px"
                        android:layout_marginLeft="35dp" />
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/addFavorites"
                        android:layout_width="52dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center|end"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/ic_favorite_white_24dp" />

                    <TextView
                        android:id="@+id/totalWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poids Total : "
                        android:textColor="@color/black"
                        android:layout_gravity="top|left|center"
                        android:layout_marginTop="50px"
                        android:layout_marginLeft="35dp" />
                </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.v7.widget.CardView>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:weightSum="1">

            </android.support.v7.widget.LinearLayoutCompat>
            </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="135dp"
            android:scrollbars="vertical"
            android:paddingBottom="5dp"
            />

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>

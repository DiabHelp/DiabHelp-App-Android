<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_export"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:padding="15dip">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/begin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dip"
            android:text="Date de début"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/date_begin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/begin_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Veuillez choisir une dateCreation de début"
            android:textColorHint="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dip"
            android:text="Date de fin"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/date_end"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/end_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Veuillez choisir une dateCreation de fin"
            android:textColorHint="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/mail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:hint="l'adresse lié au compte sera utilisé si se champ est vide"
            android:paddingBottom="10dip"
            android:text="Adresse mail (optionnelle)"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/mail_addr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mail_addr"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Adresse e-mail"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:textSize="10dp" />
    </LinearLayout>

</RelativeLayout>
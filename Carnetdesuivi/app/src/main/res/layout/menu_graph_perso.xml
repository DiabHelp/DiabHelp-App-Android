                >
            </ImageView>

            <TextView
                android:id="@+id/txthypo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_entry_size"
                android:text="@string/hyposhort"
                android:layout_gravity="center"
                >
            </TextView>

        </LinearLayout>

        <!--hyper-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_hyper"
            >
            <ImageView
                android:id="@+id/imghyper"
                android:layout_margin="5dp"
                android:layout_width="@dimen/img_entry_size_width"
                android:layout_height="@dimen/img_entry_size_height"
                android:src="@drawable/hyper"
                >
            </ImageView>

            <TextView
                android:id="@+id/txthyper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_entry_size"
                android:text="@string/hypershort"
                android:layout_gravity="center"
                >
            </TextView>

        </LinearLayout>

        <!--Travail-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_work"
            >
            <ImageView
                android:id="@+id/imgwork"
                android:layout_margin="5dp"
                android:layout_width="@dimen/img_entry_size_width"
                android:layout_height="@dimen/img_entry_size_height"
                android:src="@drawable/work"
                >
            </ImageView>

            <TextView
                android:id="@+id/txtwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_entry_size"
                android:text="@string/work"
                android:layout_gravity="center"
                >
            </TextView>

        </LinearLayout>

        <!--Home-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_home"
            >
            <ImageView
                android:id="@+id/imghome"
                android:layout_margin="5dp"
                android:layout_width="@dimen/img_entry_size_width"
                android:layout_height="@dimen/img_entry_size_height"
                android:src="@drawable/home"
                >
            </ImageView>

            <TextView
                android:id="@+id/txthome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_entry_size"
                android:text="@string/home"
                android:layout_gravity="center"
                >
            </TextView>

        </LinearLayout>

        <!--Alcohol-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_alcohol"
            >
            <ImageView
                android:id="@+id/imgalcool"
                android:layout_margin="5dp"
                android:layout_width="@dimen/img_entry_size_width"
                android:layout_height="@dimen/img_entry_size_height"
                android:src="@drawable/alcool"
                >
            </ImageView>

            <TextView
                android:id="@+id/txtalcool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_entry_size"
                android:text="@string/alcohol"
                android:layout_gravity="center"
                >
            </TextView>

        </LinearLayout>

        <!--Period-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_period"
            >
            <ImageView
                android:id="@+id/imgperiod"
                android:layout_margin="5dp"
                android:layout_width="@dimen/img_entry_size_width"
                android:layout_height="@dimen/img_entry_size_height"
                android:src="@drawable/period"
                >
            </ImageView>

            <TextView
                android:id="@+id/txtperiod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_entry_size"
                android:text="@string/period"
                android:layout_gravity="center"
                >
            </TextView>
        </LinearLayout>

    </LinearLayout>

    </HorizontalScrollView>

</ScrollView>

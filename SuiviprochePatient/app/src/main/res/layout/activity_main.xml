<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.diabhelp.diabhelp.Suivi_proches_patients.procheItemActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/liste_proches_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_welcome"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/main_layout"
        android:layout_below="@id/liste_proches_toolbar"
        tools:context="fr.diabhelp.diabhelp.Suivi_proches_patients.ListeProches">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/liste_proches_header"
            android:id="@+id/label_list"
            android:layout_centerHorizontal="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/proches_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/label_list">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>
